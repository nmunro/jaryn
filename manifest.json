{
  "manifest_version": 2,
  "name": "Jaryn",
  "short_name": "Jaryn",
  "description": "A Mood/Feelings monitor.",
  "version": "0.0.1",
  "minimum_chrome_version": "38",

  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },
  
  "permissions": [
    "unlimitedStorage",
    "syncFileSystem",
    {
      "fileSystem": [
        "write"
      ]
    }
  ],

  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  }
}
